<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: rgba(7, 8, 21, 0.77);
      color: white;
    }
    thead, th, td {
      padding-left: 70px;
    }

    .logout-button {
      background-color: #960000;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      padding: 10px 30px;
      transition: background-color 0.3s ease;
      margin-top: 30px;
    }
  </style>
</head>

<body>
  <h1>URL Shortener</h1>
  <br>
  <p>Enter a URL to shorten it:</p>
  <form method="post" action="/url">
    <input type="text" name="url" placeholder="http://example.com">
    <input type="submit" value="Shorten">
  </form>
  <br>
  <% if ( locals.id ) { %>
    <p>Generated URL: <a href="http://localhost:8000/url/<%= id %>" target="_blank">http://localhost:8000/url/<%= id %>
          </a></p>
    <% } %>

  <br>
  <% if (locals.urls) { %>
   <table>
    <thead>
        <th>SI No.</th>
        <th>ShortID</th>
        <th>Redirect URL</th>
        <th>Clicks</th>
    </thead>
    <tbody>
      <% urls.forEach((url, index) => { %>
       <tr>
       <td><%= index + 1 %></td>
       <td><%= url.shortId %></td>
       <td><%= url.redirectUrl %></td>
       <td><%= url.visitHistory.length %></td>
       </tr>
      <% }) %>
    </tbody>
   </table>
  <% } %>

  <form action="/user/logout" method="post" >
    <input class="logout-button" type="submit" value="Logout">
  </form>


</body>

</html>